  //  *test_point++ = t++;
  //}
  //free(test_point);
   
  SystemConfiguration(); 
	

  //invert on/off mode of MCI power pin(we are using a P-mosfet)
  LPC_SC->SCS  = ((LPC_SC->SCS) & 0xFFFFFFF7);

  
  //nand_init();
  //t12 = nand_test();
  
  strcpy(m_SecurityID.m_SerialNumber, "test123");
  
